<h1>New iphone site: <span id="name"></span></h1>

<script type="text/javascript">
function showurl(el) {
	document.getElementById('name').innerHTML = 'http://iphonify.net/' + el.value;
}
</script>


<% form_for(@site, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :onkeyup => "showurl(this)" %>
  </p>
  <p>
    <%= f.label :rss %><br />
    <%= f.text_field :rss %>
  </p>
  <p>
    <%= f.label :icon %><br />
    <%= f.file_field :icon %>
  </p>
  <p>
    <%= recaptcha_tags %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', sites_path %>